<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.david.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".bottom_nav.ChatFragment"/>
        <activity android:name=".chat.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register_login.Register"/>
        <activity android:name=".register_login.Login" />
        <activity android:name=".chat.ChatUsers">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.Main" />
        </activity>
        <activity android:name=".chat.ChatLog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.Main" />
        </activity>


    </application>

</manifest>